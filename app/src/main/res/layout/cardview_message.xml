<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="30dp"
    android:paddingRight="30dp">

    <LinearLayout
        android:id="@+id/linearLayoutMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/rounded_linear_layout"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/textViewMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nuevo mensaje"
            android:textColor="@color/white"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/textviewDateMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha"
            android:textColor="@color/colorGray"
            android:layout_marginLeft="5dp"
            android:layout_gravity="bottom"
            android:textSize="12dp"/>

        <ImageView
            android:id="@+id/ImageViewViewViwebMessage"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:src="@drawable/icon_check_gray"
            android:layout_gravity="bottom"/>

    </LinearLayout>

</RelativeLayout>

